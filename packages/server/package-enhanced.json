{
  "name": "@game/server",
  "version": "1.0.0",
  "description": "Backend server for Attrition",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon",
    "dev:debug": "nodemon --inspect",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "clean": "rimraf dist coverage test-results",
    
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:multiplayer": "jest --testPathPattern=multiplayer-scenarios.test.ts",
    "test:game-simulation": "jest --testPathPattern=game-simulation.test.ts",
    "test:performance": "jest --testPathPattern=performance --maxWorkers=1",
    "test:watch": "jest --watch",
    "test:watch:unit": "jest --watch --testPathPattern=__tests__/unit",
    "test:coverage": "jest --coverage",
    "test:coverage:unit": "jest --coverage --testPathPattern=__tests__/unit",
    "test:coverage:integration": "jest --coverage --testPathPattern=__tests__/integration",
    "test:related": "jest --findRelatedTests",
    "test:changed": "jest --onlyChanged",
    "test:ci": "jest --coverage --ci --watchAll=false --maxWorkers=2",
    
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "lint:report": "eslint src --ext .ts,.tsx --format json --output-file eslint-report.json",
    
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    
    "format": "prettier --write src/**/*.{ts,tsx,json}",
    "format:check": "prettier --check src/**/*.{ts,tsx,json}",
    
    "db:migrate": "ts-node src/scripts/migrate.ts",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:reset": "ts-node src/scripts/reset.ts",
    
    "migrate:remove-legacy-pop": "ts-node src/scripts/migrations/removeLegacyPopulation.ts",
    "backfill:starter-urban": "ts-node src/scripts/backfillStarterUrban.ts",
    "backfill:starter-credits": "ts-node src/scripts/backfillStarterCredits.ts",
    "backfill:tech-identity": "ts-node src/scripts/migrations/backfillTechIdentityKey.ts",
    
    "validate": "npm run lint && npm run type-check && npm run test:unit",
    "validate:full": "npm run validate && npm run test:integration",
    
    "dev:test": "concurrently \"npm run dev\" \"npm run test:watch\"",
    "dev:full": "concurrently \"npm run dev\" \"npm run test:watch\" \"npm run type-check:watch\"",
    
    "precommit": "npm run lint:fix && npm run test:unit && npm run type-check",
    "prepush": "npm run test:coverage && npm run test:integration"
  },
  "dependencies": {
    "@game/shared": "workspace:*",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "socket.io": "^4.7.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-extended": "^4.0.2",
    "mongodb-memory-server": "^9.1.6",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/__tests__/**",
      "!src/scripts/**",
      "!src/test-setup.ts",
      "!src/test-utils/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 75,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "jest-extended/all",
      "<rootDir>/src/test-setup.ts"
    ],
    "testTimeout": 30000,
    "maxWorkers": "50%",
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "test-results",
        "outputName": "junit.xml",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": true
      }]
    ],
    "globals": {
      "ts-jest": {
        "useESM": false,
        "tsconfig": {
          "target": "ES2020",
          "module": "CommonJS"
        }
      }
    }
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": "ts",
    "ignore": ["src/**/*.test.ts", "src/**/__tests__/**"],
    "exec": "ts-node src/index.ts",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/prefer-const": "error",
      "no-console": ["warn", { "allow": ["warn", "error"] }]
    },
    "env": {
      "node": true,
      "jest": true
    }
  }
}

# Database
MONGODB_URI=mongodb://localhost:27017/attrition
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/attrition

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server
PORT=3001
NODE_ENV=development

# CORS - Desktop app connects from Electron
# CORS_ORIGIN is typically not needed for desktop apps but can be set if required
# CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# Development overrides:
# RATE_LIMIT_ENABLED=false            # disable limiter entirely for local dev
# RATE_LIMIT_SKIP_AUTH=true           # exempt /api/auth/* in dev to prevent login/me 429s
# RATE_LIMIT_MAX_REQUESTS=2000        # or relax limit for dev if not disabling
# RATE_LIMIT_SKIP_GAME=true           # exempt /api/game and /api/universe in dev to avoid 429s during bursty UI testing
# RATE_LIMIT_WINDOW_MS=60000          # shorter window in dev to reduce long accumulation (default 15m)

# Game Loop Configuration
# Game loop tick interval (ms) - keep at 60000 in prod to process queues frequently
GAME_LOOP_INTERVAL_MS=60000

# Credit Payout Configuration
# Minimum payout interval (minutes): 1 for testing, 60 for production
CREDIT_PAYOUT_PERIOD_MINUTES=1

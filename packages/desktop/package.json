{
  "name": "@game/desktop",
  "version": "1.2.5",
  "private": true,
  "description": "Attrition - Strategic space colonization and warfare game",
  "main": "dist/main.js",
  "author": "Attrition Game Studio",
  "license": "MIT",
  "homepage": "https://attrition-game.com",
  "type": "module",
  "scripts": {
    "predev:original": "pnpm --filter @game/shared build && pnpm --filter @game/client build:dev",
    "predev": "pnpm --filter @game/shared build && pnpm --filter @game/client build:dev --mode development",
    "build:desktop": "tsc",
    "dev": "pnpm run build:desktop && electron .",
    "start": "electron .",
    "prebuild": "pnpm --filter @game/shared build && pnpm --filter @game/client build && pnpm run build:desktop",
    "postinstall": "electron-builder install-app-deps",
    "rebuild:native": "node scripts/rebuild-native.cjs",
    "build": "pnpm run rebuild:native && electron-builder --config ../../config/electron-builder.yml",
    "build:win": "pnpm run rebuild:native && electron-builder --win --config ../../config/electron-builder.yml",
    "build:mac": "pnpm run rebuild:native && electron-builder --mac --config ../../config/electron-builder.yml",
    "build:linux": "pnpm run rebuild:native && electron-builder --linux --config ../../config/electron-builder.yml",
    "pack": "pnpm run rebuild:native && electron-builder --dir --config ../../config/electron-builder.yml",
    "dist": "pnpm run rebuild:native && electron-builder --config ../../config/electron-builder.yml",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "jest --testNamePattern='Security'",
    "cleanup:error-queue": "node scripts/cleanup-error-queue.js",
    "cleanup:error-queue:electron": "electron ./scripts/cleanup-error-queue-electron.js"
  },
  "dependencies": {
    "@game/shared": "workspace:*",
    "better-sqlite3": "^11.3.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.1",
    "keytar": "^7.9.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.9.2",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.7.0",
    "prebuild-install": "^7.1.3",
    "typescript": "^5.9.3"
  }
}

{
  "name": "@game/desktop",
  "version": "1.1.0",
  "private": true,
  "description": "Attrition - Strategic space colonization and warfare game",
  "main": "src/main.js",
  "author": "Attrition Game Studio",
  "license": "MIT",
  "homepage": "https://attrition-game.com",
  "type": "module",
  "scripts": {
    "predev": "pnpm --filter @game/shared build && pnpm --filter @game/client build:dev",
    "dev": "electron .",
    "start": "electron .",
    "prebuild": "pnpm --filter @game/shared build && pnpm --filter @game/client build",
    "build": "electron-builder --config ../../config/electron-builder.yml",
    "build:win": "electron-builder --win --config ../../config/electron-builder.yml",
    "build:mac": "electron-builder --mac --config ../../config/electron-builder.yml",
    "build:linux": "electron-builder --linux --config ../../config/electron-builder.yml",
    "pack": "electron-builder --dir --config ../../config/electron-builder.yml",
    "dist": "electron-builder --config ../../config/electron-builder.yml",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:security": "jest --testNamePattern='Security'"
  },
  "dependencies": {
    "@game/shared": "workspace:*",
    "better-sqlite3": "^11.3.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.1",
    "keytar": "^7.9.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0"
  }
}

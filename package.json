{
  "name": "attrition",
  "version": "1.0.0",
  "description": "Desktop space empire strategy game",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @game/server dev\" \"pnpm --filter @game/desktop dev\"",
    "build": "pnpm --filter @game/shared build && pnpm --filter @game/server build && pnpm --filter @game/desktop build",
    "build:server": "pnpm install --frozen-lockfile && pnpm --filter @game/shared build && pnpm --filter @game/server build",
    "build:server:prod": "pnpm install --frozen-lockfile && pnpm --filter @game/shared build && pnpm --filter @game/server build",
    "build:render": "npm install && npm run build:shared && npm run build:server-only",
    "build:shared": "cd packages/shared && npm run build",
    "build:server-only": "cd packages/server && npm run build",
    "start:server": "pnpm --filter @game/server start",
    "test": "jest",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "node scripts/dev/integration-test.js",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:performance": "jest --config jest.config.performance.js",
    "test:security": "jest --config jest.config.security.js",
    "test:watch": "pnpm --filter \"@game/*\" test --watch",
    "test:coverage": "jest --coverage",
    "test:all": "pnpm --filter \"@game/*\" test && pnpm test:integration",
    "lint": "pnpm --filter \"@game/*\" lint",
    "clean": "pnpm --filter \"@game/*\" clean",
    "reflect:quick": "node tools/reflect.mjs quick",
    "reflect:one": "node tools/reflect.mjs one",
    "supermemory:add": "node tools/supermemory-ingest.mjs add",
    "supermemory:add:nugget": "node tools/supermemory-ingest.mjs add --content",
    "supermemory:search": "node tools/supermemory-ingest.mjs search",
    "supermemory:search:q": "node tools/supermemory-ingest.mjs search --q",
    "supermemory:seed:dry": "node tools/supermemory-ingest.mjs seed --dry-run",
    "supermemory:seed": "node tools/supermemory-ingest.mjs seed",
    "supermemory:ingest:audit:dry": "node tools/supermemory-ingest-refactor.mjs --dry-run",
    "supermemory:ingest:audit": "node tools/supermemory-ingest-refactor.mjs --live",
    "supermemory:ingest:audit:file:dry": "node tools/supermemory-ingest-refactor.mjs --file docs/refactor-audit.md --dry-run",
    "supermemory:ingest:audit:file": "node tools/supermemory-ingest-refactor.mjs --file docs/refactor-audit.md --live",
    "test:balance": "jest --config jest.config.performance.js --testNamePattern='balance'",
    "test:game-simulation": "jest --config jest.config.integration.js --testNamePattern='game-simulation'",
    "test:multiplayer": "jest --config jest.config.integration.js --testNamePattern='multiplayer'",
    "start": "pnpm --filter @game/desktop start",
    "clean:temp": "rmdir /s /q temp 2>nul || echo No temp directory to clean",
    "clean:releases": "rmdir /s /q releases 2>nul || echo No releases directory to clean",
    "clean:all": "pnpm run clean && pnpm run clean:temp && pnpm run clean:releases",
    "script:dev": "node scripts/dev/",
    "script:maintenance": "node scripts/maintenance/",
    "release:prepare": "pnpm build && pnpm --filter @game/desktop dist",
    "version:patch": "npm version patch --workspace=packages/desktop && npm version patch",
    "version:minor": "npm version minor --workspace=packages/desktop && npm version minor",
    "version:major": "npm version major --workspace=packages/desktop && npm version major",
    "release:build": "pnpm --filter @game/shared build && pnpm --filter @game/client build && pnpm --filter @game/desktop build",
    "release:publish": "pnpm --filter @game/desktop dist",
    "version:minor": "npm version minor --workspace=packages/desktop && npm version minor",
    "version:major": "npm version major --workspace=packages/desktop && npm version major",
    "release:build": "pnpm --filter @game/shared build && pnpm --filter @game/client build && pnpm --filter @game/desktop build",
    "release:publish": "pnpm --filter @game/desktop dist",
    "dev:full": "docker-compose up -d && pnpm dev",
    "dev:db": "docker-compose up mongodb -d",
    "lint:fix": "pnpm --filter \"@game/*\" lint --fix",
    "type:check": "pnpm --filter \"@game/*\" type-check",
    "security:audit": "pnpm audit && node scripts/dev/security-check.js",
    "db:seed": "node scripts/maintenance/seed-database.js",
    "db:migrate": "node scripts/maintenance/migrate-database.js",
    "dev:setup": "pnpm install && pnpm run db:seed && pnpm --filter @game/shared build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/seedrandom": "^3.0.8",
    "concurrently": "^8.2.2",
    "electron": "^31.7.7",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.2.5",
    "terser": "^5.44.0",
    "ts-jest": "^29.4.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "glob": "^11.0.3",
    "seedrandom": "^3.0.5"
  },
  "pnpm": {
    "allowedBuiltDependencies": [
      "electron"
    ]
  }
}
